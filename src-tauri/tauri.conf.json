{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "电厂智能问答系统",
  "version": "1.0.0",
  "identifier": "com.powerplant.qa-agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "电厂智能问答系统",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' tauri:",
        "connect-src": "'self' tauri: http://localhost:* http://127.0.0.1:* http://192.168.*:* http://10.*:* https://* ws://localhost:* ws://127.0.0.1:* ws://192.168.*:* ws://10.*:* wss://*",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob: https:",
        "font-src": "'self' data:"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "appimage", "deb"],
    "icon": ["icons/icon.png"],
    "publisher": "PowerPlant Tech",
    "copyright": "Copyright © 2024",
    "category": "Productivity",
    "shortDescription": "智能问答系统",
    "longDescription": "基于智能问答技术的电厂运维辅助系统桌面版"
  }
}
